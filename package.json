{
  "name": "pos",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "eslintConfig": {
    "eslint.workingDirectories": [
      {
        "pattern": "./packages/*/"
      }
    ]
  },
  "scripts": {
    "dev:ui": "yarn workspace @pos/ui start",
    "dev:api": "yarn workspace @pos/api start:dev",
    "build:common": "yarn workspace @pos/common build",
    "db:gen-migration": "yarn workspace @pos/api db:gen-migration",
    "db:run-migration": "yarn workspace @pos/api db:run-migration",
    "db:seed": "yarn workspace @pos/api db:seed"
  }
}
